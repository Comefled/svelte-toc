{
  "name": "svelte-toc",
  "description": "Sticky responsive table of contents component written in Svelte",
  "author": "Janosh Riebesell <janosh.riebesell@gmail.com>",
  "homepage": "https://janosh.github.io/svelte-toc",
  "repository": "https://github.com/janosh/svelte-toc",
  "license": "MIT",
  "version": "0.5.2",
  "type": "module",
  "svelte": "./dist/index.js",
  "bugs": "https://github.com/janosh/svelte-toc/issues",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-package",
    "serve": "vite build && vite preview",
    "test:unit": "vitest tests/unit",
    "test:e2e": "playwright test tests/*.test.ts",
    "test": "vitest tests/unit --run --coverage && playwright test tests/*.test.ts",
    "check": "svelte-check --ignore dist",
    "changelog": "npx auto-changelog --package --output changelog.md --hide-credit --commit-limit false --unreleased-only",
    "update-coverage": "vitest tests/unit --run --coverage && npx istanbul-badges-readme"
  },
  "dependencies": {
    "svelte": "^3.55.1"
  },
  "devDependencies": {
    "@playwright/test": "1.31.0",
    "@sveltejs/adapter-static": "^2.0.1",
    "@sveltejs/kit": "^1.8.3",
    "@sveltejs/package": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vitest/coverage-c8": "^0.28.5",
    "eslint": "^8.34.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "hastscript": "^7.2.0",
    "jsdom": "^21.1.0",
    "mdsvex": "^0.10.6",
    "mdsvexamples": "^0.3.3",
    "prettier": "^2.8.4",
    "prettier-plugin-svelte": "^2.9.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "svelte-zoo": "^0.3.4",
    "svelte2tsx": "^0.6.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.28.5"
  },
  "keywords": [
    "svelte",
    "toc",
    "table of contents",
    "component"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./Toc.svelte": {
      "types": "./dist/Toc.svelte.d.ts",
      "svelte": "./dist/Toc.svelte",
      "default": "./dist/Toc.svelte"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ]
}
